<% include ./partials/header %>

<h1 class="text-center search-header">Movie Search Engine</h1>
<h4 class="text-center"><a href="/history">Search History</a></h4>
<div class="container-fluid">
		<form action="/search" method="post" class="form-inline search">
			<div class="form-group">
				<input type="text" name="search" placeholder="Search for a movie ..." class="form-control">
			</div>
			<input type="submit" class="btn btn-default" value="Search">
		</form>
</div>

<% if (searchQuery.length > 0) { %>

	<h4 class="text-center search-header">Search Results for "<%= searchQuery %>"</h4>

	<div class="container results">

		<div class="col-md-6 col-md-offset-3">
			<ul class="media-list">
				<% movieNames.movies.forEach(function(movie) { %>
					<li class="media">
						<div class="media-left">
							<img class="media-object" src="<%= movie.image %>" alt="">
						</div>
						<div class="media-body">
							<h4 class="media-heading"><%= movie.name %></h4>
						</div>
					</li>
				<% }) %>
			</ul>
		</div>
	</div>
<% } %>

<% include ./partials/footer %>
